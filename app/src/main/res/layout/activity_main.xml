<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhonelee.chat.MainActivity">
    <LinearLayout
        android:id="@+id/linearCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_end"
        android:orientation="vertical" />
    <RadioGroup
        android:id="@+id/rg_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_shap"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@color/selector_color"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/msg_pic"
            android:textSize="12sp"
            android:text="消息" />

        <RadioButton
            android:id="@+id/rb_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/contact_pic"
            android:textSize="12sp"
            android:textColor="@color/selector_color"
            android:gravity="center"
            android:text="联系人" />

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/me_pic"
            android:textSize="12sp"
            android:textColor="@color/selector_color"
            android:gravity="center"
            android:text="我" />
    </RadioGroup>
</RelativeLayout>
